.nubbin{:id => dom_id(bucket, :nubbin), :style => "display: none"}
  = link_to_function("+", "Buckets.transferTo(#{bucket.account_id}, #{bucket.id})", { :class => "button", :title => "Reallocate To" })
  = link_to_function("-", "Buckets.transferFrom(#{bucket.account_id}, #{bucket.id})", { :class => "button", :title => "Reallocate From" })
  = link_to_function("&#x270e;", "Buckets.rename(#{bucket_path(bucket).to_json}, #{bucket.name.to_json}, #{form_authenticity_token.to_json})", { :class => "button", :title => "Rename" })
= link_to(h(bucket.name), bucket, :class => "bucket")
